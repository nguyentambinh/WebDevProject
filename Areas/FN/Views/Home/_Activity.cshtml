<style>
    .fn-activity {
        margin-top: 24px;
        background: var(--card);
        border-radius: 18px;
        border: 1px solid var(--border);
        padding: 18px 22px 14px 22px;
        color: var(--text);
    }

    /* header + view more */
    .as-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 8px;
    }

    .as-title {
        font-size: var(--fz);
        font-weight: 500;
    }

    .as-more {
        font-size: var(--fz);
        text-decoration: none;
        color: var(--accent);
        opacity: .9;
    }

    /* tabs giống ảnh: gạch dưới tab active */
    .as-tabs {
        display: flex;
        gap: 18px;
        border-bottom: 1px solid rgba(148,163,184,0.35);
        margin-bottom: 6px;
    }

    .as-tab {
        border: none;
        background: transparent;
        padding: 8px 0;
        font-size: 12px;
        color: var(--text);
        opacity: .7;
        cursor: pointer;
        position: relative;
    }

        .as-tab.active {
            opacity: 1;
        }

            .as-tab.active::after {
                content: "";
                position: absolute;
                left: 0;
                right: 0;
                bottom: -1px;
                height: 2px;
                border-radius: 999px;
                background: var(--accent);
            }

    /* list */
    .as-body {
        margin-top: 6px;
    }

    .as-panel {
        display: none;
    }

        .as-panel.active {
            display: block;
        }

    .as-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 8px 0;
        border-bottom: 1px solid rgba(148,163,184,0.25);
        font-size: 13px;
    }

        .as-row:last-child {
            border-bottom: none;
        }

    .as-left {
        display: flex;
        align-items: center;
        gap: 10px;
        max-width: 70%;
    }

    .as-dot {
        width: 14px;
        height: 14px;
        border-radius: 999px;
    }

        .as-dot.done {
            background: #22c55e;
        }
        /* completed */
        .as-dot.progress {
            background: #eab308;
        }
    /* in progress */

    .as-text .as-name {
        font-size: 13px;
    }

    .as-text .as-meta {
        font-size: 11px;
        opacity: .75;
    }

    .as-right {
        font-size: 12px;
        opacity: .9;
        white-space: nowrap;
    }

        .as-right.warn {
            color: #facc15;
        }
</style>

<script>
    (function () {
        const tabs = document.querySelectorAll(".as-tab");
        const historyPanel = document.querySelector(".as-history");
        const upcomingPanel = document.querySelector(".as-upcoming");
        if (!tabs.length || !historyPanel || !upcomingPanel) return;

        tabs.forEach(tab => {
            tab.addEventListener("click", function () {
                tabs.forEach(t => t.classList.remove("active"));
                this.classList.add("active");

                const target = this.getAttribute("data-tab");
                historyPanel.classList.toggle("active", target === "history");
                upcomingPanel.classList.toggle("active", target === "upcoming");
            });
        });
    })();
</script>
