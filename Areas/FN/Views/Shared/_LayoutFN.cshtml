@{
    Layout = null;
    var title = ViewBag.Title ?? "Website";
    string userId = Session["UserId"] != null ? Session["UserId"].ToString() : "";
    bool isDarkMode = Session["DarkMode"] == null ? true : (bool)Session["DarkMode"];
    string backgroundColor = isDarkMode ? "#000000" : "#f5f5f5";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="~/Content/Images/mainbg.png" />
    <title>@title</title>

    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/site.css" />
    @RenderSection("Styles", required: false)
</head>

<body style="background:@backgroundColor; z-index: 1; ">
    @Html.Action("_Header", "Shared", new { userId = userId, area = "FN" })
    @Html.Action("_Nav", "Shared", new { code = userId, area = "FN" })
    @Html.Partial("_Slider")

    <main class="container mt-4">
        @RenderBody()
    </main>

    @Html.Action("_Footer", "Shared", new { userId = userId, area = "FN" })

    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
