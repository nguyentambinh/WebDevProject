                {
                    <a class="page-link prev" href="@Url.Action("Index", new { page = current - 1 })">‹ Prev</a>
                }
                @for (int p = 1; p <= totalPages; p++)
                {
                    if (p == current)
                    {
                        <span class="page-link active" data-page="@p">@p</span>
                    }
                    else
                    {
                        <a class="page-link" data-page="@p" href="@Url.Action("Index", new { page = p })">@p</a>
                    }
                }
