@model QLNSVATC.Models.HomeViewModel
@{
    ViewBag.Title = "TBT Center - Trang chủ";
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";

    var duAn = Model?.DuAn ?? new List<QLNSVATC.Models.DUAN>();
    var hopDong = Model?.HopDong ?? new List<QLNSVATC.Models.HOPDONG>();
    var duAnHd = Model?.DuAnTheoHopDong ?? new List<QLNSVATC.Models.DUANTHEOHOPDONG>();
    var khachHang = Model?.KhachHang ?? new List<QLNSVATC.Models.KHACHHANG>();
    var nhanVien = Model?.NhanVien ?? new List<QLNSVATC.Models.NHANVIEN>();
    var positions = ViewBag.Positions as Dictionary<string, string>
                    ?? new Dictionary<string, string>();
}



