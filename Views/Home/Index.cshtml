<div class="tm-page">

    <section class="tm-hero">
        <div class="tm-hero-inner">
            <div class="tm-hero-left">

                <h1>TBT CENTER</h1>
                <p class="tagline">
                    Integrated solutions for construction execution, contract tracking and workforce management.
                </p>

                <div class="tm-hero-actions">
                    <a href="#duan" class="btn-main">Explore projects</a>
                    <a href="#hopdong" class="btn-outline">Track contracts</a>
                </div>

                <div class="tm-hero-stats-grid">
                    <div class="stat-box">
                        <strong>@duAn.Count()+</strong>
                        <span>Managed Projects</span>
                    </div>

                    <div class="stat-box">
                        <strong>@hopDong.Count()+</strong>
                        <span>Active Contracts</span>
                    </div>

                    <div class="stat-box">
                        <strong>@nhanVien.Count()+</strong>
                        <span>Project Members</span>
                    </div>
                </div>
            </div>

            <div class="tm-hero-right">
                <div class="tm-hero-card">
                    <div class="tm-hero-bg-orbit"></div>
                    <div class="tm-hero-card-inner">

                        <div class="tm-hero-pill">
                            <span class="dot"></span>
                            <span>Real-time Project Snapshot</span>
                        </div>

                        <h3>TBT Project Control Center</h3>
                        <p>
                            Quick view of contract progress and linked project codes across the portfolio.
                        </p>

                        <div class="tm-hero-projects">
                            <h4>Latest contracts</h4>
                            <ul>
                                @{
                                    var top = hopDong.OrderByDescending(x => x.NGAYBD)
                                                     .Take(3)
                                                     .ToList();

                                    if (top.Any())
                                    {
                                        foreach (var h in top)
                                        {
                                            <li>
                                                <span>@h.TENHD</span>
                                                <span style="color:#ccc;">
                                                    @String.Format("{0:dd/MM/yyyy - HH:mm:ss}", h.NGAYBD)
                                                </span>
                                            </li>
                                        }
                                    }
                                    else
                                    {
                                        <li><span>No data available.</span></li>
                                    }
                                }
                            </ul>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </section>


    <section id="duan" class="tm-section">
        <div class="tm-section-header">
            <div>
                <h2 class="tm-section-title">Featured Projects</h2>
            </div>
        </div>

        <div class="tm-grid-duan">
            @{
                // Hàm format tiền cọc: 5000K VNĐ
                Func<decimal?, string> formatDeposit = amount =>
                {
                    if (!amount.HasValue || amount <= 0) return "Updating";

                    var v = amount.Value;

                    if (v >= 1000)
                    {
                        // chia 1000, không lấy lẻ
                        var k = Math.Round(v / 1000M, 0);
                        return k.ToString("0") + "K VNĐ";
                    }

                    // < 1000 thì in bình thường
                    return v.ToString("0") + " VNĐ";
                };

                // Sắp xếp theo tiền cọc giảm dần
                var duAnSapXep = duAn
                    .OrderByDescending(x => x.TIENCOC ?? 0)
                    .Take(8)
                    .ToList();
            }

            @if (duAnSapXep.Any())
            {
                foreach (var d in duAnSapXep)
                {
                    var imgPath = Url.Content("~/Content/Images/Home/Duan/" + d.MADA + ".jpg");
                    if (!System.IO.File.Exists(Server.MapPath(imgPath)))
                    {
                        imgPath = Url.Content("~/Content/Images/Home/Duan/default.jpg");
                    }

                    var link = duAnHd
                        .Where(x => x.MADA == d.MADA)
                        .OrderByDescending(x => x.NGAYKT)
                        .FirstOrDefault();

                    QLNSVATC.Models.HOPDONG hd = null;
                    if (link != null)
                    {
                        hd = hopDong.FirstOrDefault(x => x.MAHD == link.MAHD);
                    }

                    QLNSVATC.Models.KHACHHANG kh = null;
                    if (!string.IsNullOrEmpty(d.MAKH))
                    {
                        kh = khachHang.FirstOrDefault(x => x.MAKH == d.MAKH);
                    }

                    var tenHopDong = hd != null ? hd.TENHD : "Contract updating";
                    var tenKhachHang = kh != null ? kh.THONGTIN : "Client updating";

                    string statusText = "Planning";
                    string statusClass = "badge-status status-planning";

                    if (link != null && link.NGAYKT.HasValue)
                    {
                        var endDate = link.NGAYKT.Value.Date;
                        var today = DateTime.Today;

                        if (endDate < today)
                        {
                            statusText = "Completed";
                            statusClass = "badge-status status-completed";
                        }
                        else
                        {
                            statusText = "In progress";
                            statusClass = "badge-status status-running";
                        }
                    }

                    <div class="duan-card">
                        <img src="@imgPath" alt="@d.MADA" />
                        <div class="duan-body">
                            <h3>@tenHopDong</h3>
                            <p>Project code: @d.MADA</p>
                            <p>Client: @tenKhachHang</p>
                            <p>Deposit: @formatDeposit(d.TIENCOC)</p>

                            <div class="duan-meta">
                                <span class="@statusClass">@statusText</span>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No project data available.</p>
            }
        </div>
    </section>




    <section id="hopdong" class="tm-section">
        <div class="tm-section-header">
            <h2 class="tm-section-title">Recent Contracts</h2>
        </div>

        <div class="tm-hd-layout">
            <div class="tm-hd-list">
                @if (hopDong.Any())
                {
                    foreach (var h in hopDong.OrderByDescending(x => x.NGAYBD).Take(8))
                    {
                        <div class="tm-hd-item">
                            <div class="tm-hd-title">@h.TENHD</div>
                            <div class="tm-hd-meta">
                                <span><span class="dot"></span> Code: @h.MAHD</span>
                                <span>Start date: @String.Format("{0:dd/MM/yyyy}", h.NGAYBD)</span>
                                <span>Est. end: @String.Format("{0:dd/MM/yyyy}", h.NGAYKT_DUTINH) </span>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>No contract data available.</p>
                }
            </div>
            @{
                var totalContracts = hopDong.Count();
                var activeContracts = hopDong.Count(h => !h.NGAYKT_DUTINH.HasValue || h.NGAYKT_DUTINH >= DateTime.Today);
                var finishedContracts = hopDong.Count(h => h.NGAYKT_DUTINH.HasValue && h.NGAYKT_DUTINH < DateTime.Today);

                var totalProjects = duAn.Count();
                var linkedProjects = duAnHd.Select(x => x.MADA).Distinct().Count();

