@model QLNSVATC.Models.USER
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
}
<style>
    @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');
    @@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap');

    .login-wrapper {
        width: 100%;
        display: flex;
        justify-content: center;
    }

    .login-container {
        width: 100%;
        max-width: 700px;
        padding: 120px 0;
        display: flex;
        justify-content: center;
    }

    .gold-box {
        position: relative;
        width: 380px;
        height: 430px;
        border-radius: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .gold-box::before {
            content: '';
            position: absolute;
            inset: 0;
            margin: auto;
            width: 390px;
            height: 440px;
            border-radius: 18px;
            background: linear-gradient(135deg, #f9d976 0%, #f39f33 100%);
            filter: blur(18px);
            z-index: -2;
            transition: 0.7s ease;
        }

        .gold-box::after {
            content: '';
            position: absolute;
            inset: -4px;
            background: linear-gradient(135deg, #f3b625, #c27a12, #f6d56c, #6b4e18);
            background-size: 300%;
            border-radius: 20px;
            z-index: -1;
            animation: goldMove 4s linear infinite;
        }

    @@keyframes goldMove {
        0% {
            background-position: 0%;
        }

        100% {
            background-position: 300%;
        }
    }

    .gold-box:hover::before {
        filter: blur(30px);
        transform: scale(1.04);
    }

    .gold-inner {
        position: absolute;
        inset: 35px;
        background: linear-gradient(145deg, #1a1a1a, #0d0d0d);
        border-radius: 15px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 20px 35px;
        box-shadow: inset 0 0 15px rgba(255, 215, 0, 0.15), 0 0 25px rgba(255, 215, 0, 0.1);
        color: #ffd26a;
        transition: 0.6s;
    }

        .gold-inner:hover {
            transform: translateY(-6px);
            box-shadow: inset 0 0 18px rgba(255, 215, 0, 0.25), 0 0 30px rgba(255, 215, 0, 0.2);
        }

    .login-form {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 15px;
        text-align: center;
        align-items: center;
    }

        .login-form h2 {
            font-family: 'Roboto', sans-serif;
        }

    .gold-input {
        width: 85%;
        background: rgba(255, 214, 94, 0.08);
        border: 1px solid rgba(255, 214, 94, 0.3);
        color: #ffdd8a;
        outline: none;
        transition: 0.3s;
        max-width: 240px;
    }

        .gold-input:focus {
            border-color: #f4c056;
            box-shadow: 0 0 12px rgba(255, 214, 94, 0.4);
        }

        .gold-input::placeholder {
            color: rgba(255, 216, 121, 0.6);
        }

    .gold-btn {
        border: none;
        font-weight: 600;
        cursor: pointer;
        background: linear-gradient(135deg, #fceabb, #f8b500);
        color: #1a1a1a;
        transition: 0.35s;
    }

        .gold-btn:hover {
            box-shadow: 0 0 20px rgba(255, 209, 80, 0.6);
            transform: translateY(-2px);
        }

    .gold-input,
    .gold-btn {
        width: 100%;
        padding: 10px 18px;
        border-radius: 12px;
        font-size: 15px;
        max-width: 240px;
    }

    .login-btns {
        text-align: center;
        font-size: 14px;
        margin-top: 5px;
    }

        .login-btns a {
            color: #ffdd8a;
            text-decoration: underline;
        }

    .text-danger {
        color: #ff7777;
        font-size: 13px;
    }

    @@media (min-width: 992px) {

        .gold-box {
            width: 460px;
            height: 520px;
        }

            .gold-box::before {
                width: 480px;
                height: 540px;
            }

        .gold-inner {
            inset: 40px;
            padding: 30px 45px;
        }

        .gold-input,
        .gold-btn {
            max-width: 300px;
            font-size: 16px;
            padding: 12px 18px;
        }

        .login-form h2 {
            font-size: 50px;
            margin-bottom: 15px;
        }

        .login-btns {
            font-size: 15px;
        }
    }

    @@media (max-width: 768px) {

        .login-container {
            padding: 80px 0;
        }

        .gold-box {
            width: 320px;
            height: 370px;
            transform: scale(.95);
        }

            .gold-box::before {
                width: 330px;
                height: 380px;
                filter: blur(14px);
            }

        .gold-inner {
            inset: 28px;
            padding: 18px 26px;
        }

        .login-form h2 {
            font-size: 20px;
            letter-spacing: 2px;
            margin-bottom: 8px;
            font-weight: 900;
            font-family: 'Roboto', sans-serif;
        }

        .gold-input,
        .gold-btn {
            width: 100%;
            padding: 9px 15px;
            font-size: 15px;
        }

        .login-btns {
            font-size: 13px;
            margin-top: 4px;
        }
    }


    @@media (max-width: 480px) {

        .gold-box {
            width: 280px;
            height: 340px;
            transform: scale(.9);
        }

            .gold-box::before {
                width: 290px;
                height: 350px;
            }

        .gold-inner {
            inset: 24px;
            padding: 15px 20px;
        }

        .gold-input,
        .gold-btn {
            font-size: 14px;
            padding: 8px 14px;
        }

        .login-btns {
            font-size: 12px;
        }
    }

    .validation-summary-errors {
        color: #ffffff;
        font-size: 14px;
    }

        .validation-summary-errors ul {
            list-style: none;
            padding-left: 0;
            margin: 0;
        }
</style>

<div class="login-wrapper" id="loginSection">
    <div class="login-container">
        <div class="gold-box">
            <div class="gold-inner">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form" }))
                {
                    @Html.AntiForgeryToken()
                    <h2>LOGIN</h2>
                    @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })
                    @Html.TextBoxFor(m => m.USERNAME,
                        new { placeholder = "Username", @class = "gold-input" })
                    @Html.PasswordFor(m => m.PASS,
                        new { placeholder = "Password", @class = "gold-input" })
                    <input type="submit" value="Sign in" class="gold-btn" />

                    <div class="login-btns">
                        @Html.ActionLink("Forgot Password?", "ForgotPassword", "Account")
                        <br />
                        <span>
                            Don't have an account?
                            @Html.ActionLink("Sign up", "Register", "Account")
                        </span>
                    </div>

                }
            </div>
        </div>

    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const loginSection = document.getElementById("loginSection");
        if (loginSection) {
            loginSection.scrollIntoView({
                behavior: "smooth",
                block: "start"
            });
        }
    });
    setTimeout(() => {
        document.querySelector(".gold-input")?.focus();
    }, 400);
</script>

