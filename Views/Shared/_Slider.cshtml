    </div>

    <div class="slider-buttons">
        <button class="slider-prev"><i class="fa-solid fa-arrow-left"></i></button>
        <button class="slider-next"><i class="fa-solid fa-arrow-right"></i></button>
    </div>
</div>

<script>
    let next = document.querySelector(".slider-next");
    let prev = document.querySelector(".slider-prev");

    next.addEventListener("click", function () {
        let items = document.querySelectorAll(".slider-item");
        document.querySelector(".slider-track").appendChild(items[0]);
    });

    prev.addEventListener("click", function () {
        let items = document.querySelectorAll(".slider-item");
        document.querySelector(".slider-track").prepend(items[items.length - 1]);
    });
</script>
