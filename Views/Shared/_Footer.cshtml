<style>
    .footer-wrapper {
        font-family: 'Roboto', sans-serif;
        font-size: @(fontSize)px;
        color: @textColor;
        width: 100%;
    }

    .cta-footer {
        width: 100%;
        background: @ctaBg;
    }

    .cta-footer-inner {
        max-width: 1164px;
        margin: auto;
        padding: 30px 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 32px;
    }

    .cta-btn {
        background: @ctaBtnBg;
        padding: 10px 24px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        color: @titleColor;
        transition: 0.25s;
    }

    .cta-btn:hover {
        color: @titleColor;
        box-shadow: 0 0 10px rgba(255,255,255,0.45);
        transform: translateY(-2px);
    }

    .main-footer {
        background: @bgFooter;
        backdrop-filter: blur(14px);
        -webkit-backdrop-filter: blur(14px);
        padding: 50px 40px 30px;
        border-top: 1px solid rgba(255,255,255,0.15);
    }

    .footer-container {
        max-width: 1164px;
        margin: auto;
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 40px;
    }

    .footer-col h3,
    .footer-col span {
        color: @titleColor;
        font-size: 18px;
        margin-bottom: 10px;
        font-weight: 700;
    }

    .footer-col h3 {
        margin-top: 0 !important;
    }

    .footer-col ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .footer-col ul li {
        margin-bottom: 6px;
        transition: 0.25s;
        cursor: pointer;
    }

    .footer-col ul li:hover {
        color: @titleColor;
        text-shadow: 0 0 8px rgba(255,255,255,0.55);
        transform: translateX(3px);
    }

    .social-icons i {
        font-size: 22px;
        transition: 0.25s;
        cursor: pointer;
    }

    .social-icons i:hover {
        color: @titleColor;
        text-shadow: 0 0 10px rgba(255,255,255,0.7);
        transform: scale(1.18);
    }

    .footer-bottom {
        margin-top: 35px;
        padding-top: 20px;
        border-top: 1px solid rgba(255,255,255,0.12);
        text-align: center;
        font-size: 13px;
        color: @textColor;
    }

    @@media (max-width: 600px) {
        .cta-footer-inner {
            flex-direction: column;
            align-items: flex-start;
            gap: 14px;
            padding: 24px 20px;
        }

        .footer-container {
            grid-template-columns: 1fr;
            gap: 24px;
        }
    }
</style>

